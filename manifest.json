{
    "manifest_version": 2,
    "version": "1.0.1",
    "name": "exCalc Extension",
    "description": "Calculadora rápida e à 1 clique de distância.",
    "author": "Bruno Filho",
    "browser_action": {
   	 "default_title": "exCalc",
   	 "default_popup": "index.html",
   	 "default_icon": "icon.png"
    },
    "content_scripts": [{
        "matches": ["file:///*"],
        "js": ["scripts.js"]
     }],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": ["activeTab"]
}